<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root fx:id="menu_pane" type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <MenuBar>
                    <menus>
                        <Menu mnemonicParsing="false" text="File">
                            <items>
                                <MenuItem fx:id="save" mnemonicParsing="false" text="Save" />
                                <MenuItem fx:id="load" mnemonicParsing="false" text="Load" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Edit">
                            <items>
                                <MenuItem fx:id="rename_schema" mnemonicParsing="false" text="New Schema" />
                            </items>
                        </Menu>
                  <Menu mnemonicParsing="false" text="Display">
                     <items>
                        <CheckMenuItem mnemonicParsing="false" text="Block value" />
                     </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Run">
                    <items>
                      <MenuItem fx:id="run" mnemonicParsing="false" text="Run" />
                        <MenuItem fx:id="debug" mnemonicParsing="false" text="Debug" />
                    </items>
                  </Menu>
                        <Menu mnemonicParsing="false" text="Help">
                            <items>
                                <MenuItem fx:id="about" mnemonicParsing="false" text="About" />
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
            </children>
        </VBox>
    </children>
</fx:root>
